{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "Build",
            "name": "Docker - OpenOCD Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": ".outs/test.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "/${workspaceFolderBasename}",
            "environment": [],
            "externalConsole": false,
            "sourceFileMap": { 
                "/${workspaceFolderBasename}": "${workspaceFolder}" 
            },
            "pipeTransport": {
                "debuggerPath": "arm-none-eabi-gdb",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec", 
                    "-w", "/${workspaceFolderBasename}",
                    "-i", "${workspaceFolderBasename}",
                    "sh", "-c"
                ],
                "pipeCwd": ""
            },
            "MIMode": "gdb",
            "setupCommands": [
                { "text": "target remote localhost:3333" },
                { "text": "set disassemble-next-line on" },
                { "text": "monitor reset halt" },
                { "text": "monitor adapter_khz 1000" },
                { "text": "load .outs/test.elf" },
                { "text": "monitor adapter_khz 1000" },
                { "text": "monitor reset halt" },
            ],
        },
    ]
}
